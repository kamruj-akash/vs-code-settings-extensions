{
  "workbench.colorCustomizations": {
    "[Learn with Sumit - Professional]": {
      "toolbar.activeBackground": "#80CBC426",
      "activityBarBadge.background": "#80CBC4",
      "activityBar.activeBorder": "#80CBC4"
      // ... (other UI colors)
    },
    // Terminal Theme Customization
    "terminal.background": "#131a19",
    "terminal.foreground": "#9ba9e3"
    // ... (other terminal colors)
  },

  // ‚öôÔ∏è General Editor & Explorer Settings
  "workbench.editor.empty.hint": "hidden",
  "liveServer.settings.CustomBrowser": "chrome",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "editor.renderWhitespace": "none",
  "editor.guides.indentation": false,

  // üîê Security Settings
  "security.workspace.trust.untrustedFiles": "open",

  // ‚úçÔ∏è Editor Appearance
  "editor.fontSize": 18,
  "editor.lineHeight": 28,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.fontFamily": "SF Operator Mono",
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "entity.name.type",
          "storage.type",
          "support.type",
          "support.class",
          "entity.name.class",
          "entity.other.inherited-class"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // üß† Better visuals
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,

  // üñ±Ô∏è Cursor Customization
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",

  // ===================================================================
  // üßë‚Äçüíª Code Formatting & Linting (ESLint + Prettier)
  // ===================================================================
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ESLint-
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.alwaysShowStatus": true,
  // ===================================================================

  // üî≤ Terminal Font Size & Line Height
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.3,

  // üß≠ Sidebar Config
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.startupEditor": "none",
  "git.openRepositoryInParentFolders": "never",
  "terminal.integrated.env.osx": {},
  "console-ninja.featureSet": "Community",
  "workbench.externalBrowser": "chrome",
  "code-doctor.apiKey": "AIzaSyBN-T49zIJI9BrMDlU0PWdQnrCzIrS8in8",
  "smart-refactor-ai.apiKey": "AIzaSyBN-T49zIJI9BrMDlU0PWdQnrCzIrS8in8",
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.iconClickBehavior": "focus",
  "liveServer.settings.donotVerifyTags": true,
  "github.copilot.enable": {
    "*": true,
